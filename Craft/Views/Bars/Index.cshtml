@model IEnumerable<Craft.Models.Craft.Bar>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p class="btn btn-default">
    @Html.ActionLink("Create New", "Create")
</p>
<br />
<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BarName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.BarName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.BarId }) |
            @Html.ActionLink("Details", "Details", new { id=item.BarId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.BarId })
        </td>
    </tr>
}

</table>
